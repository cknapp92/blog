extends layout

block content
  .single
    .single__hero
      img.single__image(src=`/uploads/${post.photo || 'store.png'}`)
      h2.title.title--single
        a(href=`/posts/${post.slug}`) #{post.name}
 
  .single__details.inner
    if post.tags
      ul.tags
        each tag in post.tags
          li.tag
            a.tag__link(href=`/tags/${tag}`) 
              span.tag__text ##{tag}

    p= post.description